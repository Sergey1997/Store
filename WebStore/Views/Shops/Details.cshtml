@model WebStore.Models.Shop
@{
    ViewBag.Title = "Details";
}

<h2>Детали</h2>

<div>
    <h4>Магазин</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Наименование
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Адрес
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            График работы
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime) - @Html.DisplayFor(model => model.EndTime)
        </dd>
    </dl>
    <h3 class="text-center">Список продуктов:</h3>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th class="col-sm-3">
                Наименование
            </th>
            <th class=" col-sm-10">
                Описание    
            </th>
        </tr>

        @foreach (var item in Model.Products)
        {
            <tr>
                <td> @Html.ActionLink(@item.Name, "Details", "Products", new { id = item.Id }, null)</td>

                <td> @item.Description</td>
            </tr>
        }
    </table>
    <div class="btn-md col-md-offset-1 col-md-12">
        <button type="button" class="btn">
            @Html.ActionLink("Вернуться", "Index")
        </button>
    </div>
</div>