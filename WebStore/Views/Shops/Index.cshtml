@model IEnumerable<WebStore.Models.Shop>

@{
    ViewBag.Title = "Index";
}

<h2>Магазины</h2>

<p>
    @Html.ActionLink("Добавить новый магазин", "Create")
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <tr>
        <th>
            Наименование
        </th>
        <th>
            Адрес
        </th>
        <th>
            График работы
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime) - @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
